<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CameraApps.Screenshot">
    <ContentPage.Content>
        <StackLayout>

            <Button Text="Screenshot" Clicked="Button_Clicked"/>

            <Image HeightRequest="200" WidthRequest="200" VerticalOptions="FillAndExpand" x:Name="ScreenshotButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>